<style>
.insights-field-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    padding: 12px;
    background: #F9FAFB;
    border-radius: 6px;
}
.insights-field-stat {
    text-align: center;
    padding: 8px;
}
.insights-field-value {
    font-size: 20px;
    font-weight: 700;
    color: #111827;
}
.insights-field-label {
    font-size: 11px;
    color: #6B7280;
    margin-top: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}
.insights-field-footer {
    margin-top: 12px;
    padding-top: 8px;
    border-top: 1px solid #E5E7EB;
    font-size: 12px;
    color: #6B7280;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
</style>

<div class="insights-field-stats">
    <div class="insights-field-stat">
        <div class="insights-field-value">{{ stats.views|number_format }}</div>
        <div class="insights-field-label">{{ 'Views'|t('insights') }}</div>
    </div>
    <div class="insights-field-stat">
        <div class="insights-field-value">{{ stats.uniqueVisitors|number_format }}</div>
        <div class="insights-field-label">{{ 'Visitors'|t('insights') }}</div>
    </div>
    <div class="insights-field-stat">
        <div class="insights-field-value">
            {% set minutes = (stats.avgTime / 60)|round(0, 'floor') %}
            {% set seconds = stats.avgTime % 60 %}
            {{ minutes }}:{{ '%02d'|format(seconds) }}
        </div>
        <div class="insights-field-label">{{ 'Avg. Time'|t('insights') }}</div>
    </div>
    <div class="insights-field-stat">
        <div class="insights-field-value">{{ stats.bounceRate }}%</div>
        <div class="insights-field-label">{{ 'Bounce Rate'|t('insights') }}</div>
    </div>
</div>
<div class="insights-field-footer">
    <span>
        {% if range == '7d' %}{{ 'Last 7 days'|t('insights') }}
        {% elseif range == '30d' %}{{ 'Last 30 days'|t('insights') }}
        {% elseif range == '90d' %}{{ 'Last 90 days'|t('insights') }}
        {% elseif range == '12m' %}{{ 'Last 12 months'|t('insights') }}
        {% endif %}
    </span>
    <a href="{{ cpUrl('insights', { range: range }) }}">{{ 'View full analytics'|t('insights') }}</a>
</div>
